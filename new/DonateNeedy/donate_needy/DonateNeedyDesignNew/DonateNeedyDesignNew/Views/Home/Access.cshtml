
@{
    ViewBag.Title = "Access";
}

<div id="myModalaccess" class="modalaccess">
    <div class="ed_toppadder60 ed_bottompadder60">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-3 col-md-offset-3">

                    <div class="ed_teacher_div" style="padding-top:15%;">
                        <div class="ed_heading_top">
                            <h3>Access Credentials</h3><br />
                        </div>
                        <form class="ed_contact_form ed_toppadder20" action="/Home/Access" method="post">
                            <label id="accesserror" style="color:red;width:100%;text-align:center;margin-bottom:8%">@TempData["msg2"]</label><br />
                            <div class="form-group" style="margin-top:-15px;">
                                <label class="control-label">UserName <span style="color:#ff0000;">*</span></label>
                                <input type="text" class="form-control" name="username" id="accessusername" autofocus required>
                                <div id="accessusernameValidator"></div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Password <span style="color:#ff0000;">*</span></label>
                                <input type="password" class="form-control" name="password" id="accesspassword" required>
                                <div id="accesspasswordValidator"></div>
                            </div>
                            <div class="form-group col-xs-12">
                                <button type="submit" id="btnaccess" class="btn ed_btn ed_orange pull-right" style="outline:none;">Access</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div id="caption"></div>
</div>

