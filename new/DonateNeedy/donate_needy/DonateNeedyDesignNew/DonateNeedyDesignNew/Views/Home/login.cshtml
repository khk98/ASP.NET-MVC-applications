
@{
    ViewBag.Title = "login";
}

<div class="ed_graysection ed_toppadder60 ed_bottompadder60">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-3 col-md-offset-3">

                <div class="ed_teacher_div" style="padding-top:15%;">
                    <div class="form-group" style="margin-top:-12%;margin-bottom:9%;">
                        <a href="/User/SignUp" style="color: #1e4270; font-weight: bold;padding-left:85%;">SignUp</a>
                    </div>
                    <div class="form-group col-xs-12">
                        <button class="btn ed_btn ed_orange" id="FacebookLogin" onclick="Login();" style="background-color: #3B5998;color:white;width:100%;outline:none;"><i class="fa fa fa-facebook" style="margin-right:1%;"></i> Login with Facebook</button>
                    </div>
                    <div class="form-group col-xs-12">
                        <button class="btn ed_btn ed_orange" id="GoogleLogin" onclick="login()" style="background-color: #dd4b39; color: white; width: 100%;outline:none;"><i class="fa fa-google-plus" style="margin-right:1%;"></i> Sign in with Google</button>
                    </div>
                    <div class="form-group col-xs-12" style="text-align:center;">
                        <span><b>OR</b></span>
                    </div>
                    <form class="ed_contact_form ed_toppadder20" action="/Home/Login" method="post">
                        @if (TempData["msg2"] != null)
                        {
                            <label style="color:red;width:100%;text-align:center;margin-bottom:8%">@TempData["msg2"]</label><br />
                        }
                        else if (TempData["msg1"] != null)
                        {
                            <label style="color: #1e4270; width: 100%; text-align: center; margin-bottom: 8%">@TempData["msg1"]</label><br />
                        }
                        <div class="form-group" style="margin-top:-15px;">
                            <label class="control-label">UserName <span style="color:#ff0000;">*</span></label>
                            <input type="text" class="form-control" name="username" autofocus required>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Password <span style="color:#ff0000;">*</span></label>
                            <input type="password" class="form-control" name="password" required>
                        </div>
                        <div class="form-group col-xs-12">
                            <a href="/User/forgotPassword" style="color: #1e4270; font-weight: bold; cursor: pointer;margin-left:-15px;">Forgot Password</a>
                            <button type="submit" class="btn ed_btn ed_orange pull-right" style="outline:none;">Login</button>
                        </div>
                        @if (TempData["previousurl"] != null)
                        {
                            <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@TempData["previousurl"]" />
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="fb-root"></div>
<script src="~/Scripts/Home/login.js"></script>
