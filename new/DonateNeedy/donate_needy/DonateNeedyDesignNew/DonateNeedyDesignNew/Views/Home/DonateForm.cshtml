
@{
    ViewBag.Title = "DonateForm";
}

<link href="~/Content/Home/Search.css" rel="stylesheet" />
<link href="~/Content/Home/DonateForm.css" rel="stylesheet" />
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>



<div class="container">
    <p class="List-of-Causes">Home/List of Causes/selected product/Donate</p>
    <p class="Donation-Details">Donation Details</p>
    <div class="Rectangle-3-Copy-12" style="padding-top:20px;padding-bottom:0px;margin-bottom:20px;">
        <div class="row remove-mrl" style="margin-bottom:0px;">
            <div class="col-lg-12">
                <div class="col-lg-4">
                    <img src="~/img/Home/Search/bitmap.png" />
                </div>
                <div class="col-lg-8">
                    <p class="Donate-Food" style="margin-left:0px;">Donate Food</p>
                    <p class="Location" style="margin-left:0px;">Location</p>
                    <div class="Rectangle-3-Copy-101" style="margin-top:0px;">
                        <div class="Rectangle-3-Copy-111"></div>
                    </div>
                    <p class="layer" style="text-align:initial;">$ 3000/5000</p>
                </div>
            </div>
        </div>

    </div>

    <div class="stepwizard col-md-offset-3 col-xs-offset-3">
        <div class="stepwizard-row setup-panel">
            <div class="stepwizard-step">
                <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                <p>Basic Information</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                <p>Payment Method</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                <p>Payment Summary</p>
            </div>
        </div>
    </div>

    <hr />

    <form role="form" action="" method="post">
        <div class="row setup-content" id="step-1">
            <div class="col-xs-12 col-lg-12">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label form-width">Amount</label>
                        <input maxlength="100" type="text" class="form-control form-width" placeholder="Enter Amount" />
                    </div>
                    <div class="form-group">
                        <div class="form-width form-inline-user">
                        <label class="control-label">First Name</label>
                        <input maxlength="100" type="text" class="form-control" placeholder="Enter First Name" />
                    </div>
                        <div class="form-width form-inline-user">
                            <label class="control-label">Last Name</label>
                            <input maxlength="100" type="text" class="form-control" placeholder="Enter Last Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-width form-inline-user">
                            <label class="control-label">Phone Number</label>
                            <input maxlength="100" type="text" @*required="required"*@ class="form-control" placeholder="Enter Phone Number" />
                        </div>
                        <div class="form-width form-inline-user">
                            <label class="control-label">Email</label>
                            <input maxlength="100" type="text" @*required="required"*@ class="form-control" placeholder="Enter Email" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label form-width">Description</label>
                        <textarea required="required" class="form-control form-width" placeholder="Enter description"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" /> Anonymus donations
                        <a href="#" data-toggle="tooltip" title="Text"><span class="glyphicon glyphicon-question-sign"></span></a>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" /> Happy to hear from Donate Needy?
                    </div>
                    <button class="btn btn-primary nextBtn btn-lg pull-right Rectangle-Next" type="button">Next</button>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-2">
            <div class="col-xs-12 col-lg-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Card Holder Name</label>
                        <input maxlength="100" type="text" class="form-control" placeholder="Enter Card Holder Name" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Card Number</label>
                        <input maxlength="100" type="text" class="form-control" placeholder="Enter Card Number" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Cvv</label>
                        <input maxlength="100" type="text" class="form-control" placeholder="Enter Cvv" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Expiry Date</label>
                        <input maxlength="100" type="text" class="form-control" placeholder="Enter Expiry Date" />
                    </div>
                    <img class="stripe-img" src="~/img/Donate Form/stripen.png" />
                </div>
            </div>
            <div class="col-xs-12 col-lg-6">
                <div class="col-md-12 pull-center paypal-mtop">
                    <img class="paypal-img" src="~/img/Donate Form/paypal.png" />
                </div>
            </div>
            <div class="col-xs-12 col-lg-12 pull-center">
                <button class="btn btn-primary nextBtn btn-lg Rectangle-Pay-Now" type="button">Pay Now</button>
            </div>
            </div>
        <div class="row setup-content" id="step-3">
            <div class="col-xs-6 col-md-offset-3">
                <div class="col-md-12">
                    <h3> Step 3</h3>
                    <button class="btn btn-success btn-lg pull-right" type="submit">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>


<script src="~/Scripts/Home/DonateForm.js"></script>